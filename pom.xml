			</dependency>
			<dependency>
				<groupId>jjblue</groupId>
				<artifactId>CBM-1.14</artifactId>
				<version>${revision}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>jjblue</groupId>
				<artifactId>CBM-1.15</artifactId>
				<version>${revision}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>jjblue</groupId>
				<artifactId>CBM-lib</artifactId>
				<version>${revision}</version>
